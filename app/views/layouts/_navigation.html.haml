= link_to "Bandwagon", root_path, :class => 'brand'
%ul.nav.pull-right
  - if user_signed_in?
    %li
      = link_to "Create a Tee", new_tshirt_path
    %li
      = link_to "My Tees", tshirts_path
    - if current_user.has_role? :admin
      %li.dropdown
        = link_to "#", class: "dropdown-toggle", :"data-toggle"=> "dropdown" do
          Admin
          %b.caret
        %ul.dropdown-menu
          %li
            = link_to "Tshirts", admin_tshirts_path
          %li
            = link_to "Users", users_path
    %li.dropdown
      = link_to "#", class: "dropdown-toggle", :"data-toggle" => "dropdown" do
        = current_user.email
        %b.caret
      %ul.dropdown-menu
        %li
          = link_to 'Edit Account', edit_user_registration_path
    %li
      = link_to destroy_user_session_path, :method=> 'delete' do
        Sign Out
        %i.icon-signout
  - else
    %li
      = link_to 'Sign Up', new_user_registration_path
    %li
      = link_to new_user_session_path do
        Sign In
        %i.icon-signin

